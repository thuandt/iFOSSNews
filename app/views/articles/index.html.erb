<% content_for :title, "Trang chá»§" %>

<div class="row">
  <% @articles.each do |article| %>
    <div class="span4">
      <h4><%= link_to truncate(article.title, :length => 45),
                      article_path(article) %></h4>
      <div class="thumbnail">
        <%= image_tag article.photothumb.url(:medium) %>
      </div>
      <p><%= truncate article.body, :length => 120 %></p>
    </div>
  <% end %>
</div>

<%= will_paginate @articles, :previous_label => '<<', :next_label => '>>' %>
