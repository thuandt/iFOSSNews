<% content_for :title,  "Sửa bài viết" %>
<h1>Sửa bài viết</h1>
<br />
<%= simple_form_for @article, :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.error_notification %>
    <%= f.input :title,
                :label => "Tiêu đề",
                :input_html => { :class => "span8" } %>

    <%= f.file_field :photothumb %>

    <%= f.input :body,
                :label => "Nội dung",
                :input_html => { :class => "span8" } %>

    <div class="form-actions">
      <%= f.submit "Cập nhật", :class => 'btn btn-primary' %>
      <%= link_to "Hủy", articles_path, :class => 'btn' %>
    </div>

<% end %>
